<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/image_reply_message_user_head" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:textColor="@color/c_ffffff" android:id="@id/text_reply_message_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/image_reply_comment_user_head" />
        <TextView android:textColor="@color/c_ffffff" android:id="@id/text_reply_message_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/text_reply_message_user_name" android:layout_alignLeft="@id/text_reply_message_user_name" />
        <ImageView android:id="@id/image_reply_message_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" />
    </RelativeLayout>
    <TextView android:id="@id/text_reply_message_content" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <LinearLayout android:layout_gravity="end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@id/image_reply_message_support" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@id/text_reply_message_support_num" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>