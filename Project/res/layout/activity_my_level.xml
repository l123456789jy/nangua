<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/main_color" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@color/color_222222" android:paddingBottom="@dimen/base_dimen_32" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_horizontal" android:id="@id/iv_level_head" android:layout_width="@dimen/base_dimen_160" android:layout_height="@dimen/base_dimen_160" android:layout_marginTop="@dimen/base_dimen_64" android:src="@drawable/userphoto_login" android:scaleType="fitXY" />
                <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/base_dimen_32">
                    <TextView android:textSize="@dimen/text_14" android:textColor="#ffefefef" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="当前等级:" />
                    <TextView android:textSize="@dimen/text_14" android:textColor="#ffefc68e" android:gravity="center" android:id="@id/my_level" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" />
                </LinearLayout>
                <cn.vcinema.cinema.view.LevelView android:id="@id/level_view" android:background="#ffefc68e" android:layout_width="fill_parent" android:layout_height="@dimen/base_dimen_48" android:layout_marginLeft="@dimen/base_dimen_18" android:layout_marginTop="@dimen/base_dimen_61" android:layout_marginRight="@dimen/base_dimen_18" />
                <TextView android:textSize="@dimen/text_12" android:textColor="#ff777777" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/base_dimen_33" android:layout_marginTop="@dimen/base_dimen_20" android:text="等级成长路径，每天6点刷新" />
            </LinearLayout>
            <RelativeLayout android:background="@color/color_222222" android:paddingBottom="@dimen/base_dimen_24" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/base_dimen_64">
                <TextView android:textSize="@dimen/text_14" android:textColor="#ffefefef" android:gravity="center" android:id="@id/tv_now_level" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/base_dimen_33" android:layout_marginTop="@dimen/base_dimen_32" android:text="距离下一等级:" />
                <TextView android:textSize="@dimen/text_14" android:textColor="#ffefc68e" android:gravity="center" android:id="@id/next_level" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/base_dimen_32" android:text="" android:layout_toRightOf="@id/tv_now_level" />
                <android.support.v4.view.ViewPager android:id="@id/vp_my_level" android:layout_width="fill_parent" android:layout_height="@dimen/base_dimen_360" android:layout_marginTop="@dimen/base_dimen_64" android:layout_below="@id/tv_now_level" />
                <cn.vcinema.cinema.view.VpProgressView android:id="@id/vp_progress_view" android:background="#ffefc68e" android:layout_width="@dimen/base_dimen_144" android:layout_height="@dimen/base_dimen_4" android:layout_marginTop="@dimen/base_dimen_64" android:layout_below="@id/vp_my_level" android:layout_centerHorizontal="true" />
                <View android:id="@id/view4" android:background="#ff3e3e3e" android:layout_width="fill_parent" android:layout_height="@dimen/base_dimen_2" android:layout_marginLeft="@dimen/base_dimen_28" android:layout_marginTop="@dimen/base_dimen_40" android:layout_marginRight="@dimen/base_dimen_28" android:layout_below="@id/vp_progress_view" />
                <TextView android:textSize="@dimen/text_11" android:textColor="#ff9f9f9f" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/base_dimen_28" android:layout_marginTop="@dimen/base_dimen_24" android:text="@string/my_level_bottom_text" android:layout_below="@id/view4" />
            </RelativeLayout>
            <TextView android:textSize="@dimen/text_14" android:textColor="@color/color_9f9f9f" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/base_dimen_80" android:layout_marginBottom="@dimen/base_dimen_80" android:text="没有更多了～" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>