<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.RecyclerView android:id="@id/recycler_reply_detail" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout android:orientation="horizontal" android:id="@id/layout_reply_message_dialog" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <EditText android:id="@id/edit_reply_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/hint_reply_message" android:layout_weight="1.0" />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" />
    </LinearLayout>
</RelativeLayout>